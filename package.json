    "@types/mocha": "^10.0.4",
    "@types/node": "^20.9.2",
    "@types/sinon": "^17.0.3",
    "@types/sinon-chai": "^3.2.12",
    "chai": "^4.3.10",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.3",
    "sinon": "^17.0.1",
    "sinon-chai": "^3.7.0",
    "ts-mocha": "^10.0.0",
    "typescript": "^5.3.2"
